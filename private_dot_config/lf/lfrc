# https://github.com/gokcehan/lf/wiki/Tips
# https://github.com/laluxx/dotfiles/blob/main/.config/lf/lfrc
set shell zsh
set shellopts '-euy'
set previewer bat
set hidden
set drawbox
# set color256
set icons
set sortby time
set reverse

cmd delete ${{
	clear; tput cup $(($(tput lines)/3)); tput bold
	set -f
	printf "%s\n\t" "$fx"
	printf "delete?[y/N]"
	read ans
	[ $ans = "y" ] && rm -rf $fx
}}

cmd newfold ${{
    set -f
    read newd
    printf "Directory name: "
    mkdir -- "$newd"
    mv -- $fx "$newd"
}}

map D delete
map A push $mkdir<space>
map a push $touch<space>
map <a-n> newfold
